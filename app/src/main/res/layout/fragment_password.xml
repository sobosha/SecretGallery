<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiant_background">
    <TextView
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_30sdp"
        android:text="کلمه عبور خود را وارد کنید"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/_17sdp"
        android:gravity="center"
        android:textStyle="bold"
        android:id="@+id/textview_EnterPassword"
        android:layout_marginTop="@dimen/_60sdp"
        android:textColor="#f2efe2"/>
        <TextView
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_20sdp"
            android:text="بیشتر از 4 رقم"
            android:textColor="#fa3f2e"
            android:textSize="@dimen/_12sdp"
            android:layout_below="@id/textview_EnterPassword"
            android:layout_centerHorizontal="true"
            android:paddingRight="@dimen/_20sdp"
            android:visibility="gone"
            android:id="@+id/password_error"/>
    <EditText
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_40sdp"
        android:clickable="false"
        android:enabled="false"
        android:layout_centerHorizontal="true"
        android:inputType="numberPassword"
        android:background="@drawable/shape_warning"
        android:id="@+id/edittext_password"
        android:layout_below="@id/textview_EnterPassword"
        android:maxLength="6"
        android:gravity="center"
        android:layout_marginTop="@dimen/_30sdp"
        android:hint="کلمه عبور"
        android:textSize="@dimen/_20sdp"
        android:textColorHint="#a4aaab"
        />
    <TextView
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:textColor="#f2efe2"
        android:text="رمز عبورم را فراموش کرده ام!"
        android:gravity="center"
        android:textSize="@dimen/_12sdp"
        android:id="@+id/forgotPassword"
        android:layout_below="@id/edittext_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_5sdp"/>
    <LinearLayout
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:weightSum="4"
        android:layout_below="@id/forgotPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_20sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="3">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:background="@drawable/shape_circle_number"
                    android:layout_centerInParent="true"
                    android:text="1"
                    android:gravity="center"
                    android:textSize="@dimen/_35sdp"
                    android:id="@+id/number1"
                    android:textColor="#f2efe2"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:background="@drawable/shape_circle_number"
                    android:layout_centerInParent="true"
                    android:text="2"
                    android:gravity="center"
                    android:textSize="@dimen/_35sdp"
                    android:id="@+id/number2"
                    android:textColor="#f2efe2"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:background="@drawable/shape_circle_number"
                    android:layout_centerInParent="true"
                    android:text="3"
                    android:gravity="center"
                    android:textSize="@dimen/_35sdp"
                    android:id="@+id/number3"
                    android:textColor="#f2efe2"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:background="@drawable/shape_circle_number"
                    android:layout_centerInParent="true"
                    android:text="4"
                    android:gravity="center"
                    android:textSize="@dimen/_35sdp"
                    android:id="@+id/number4"
                    android:textColor="#f2efe2"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:background="@drawable/shape_circle_number"
                    android:layout_centerInParent="true"
                    android:text="5"
                    android:gravity="center"
                    android:textSize="@dimen/_35sdp"
                    android:id="@+id/number5"
                    android:textColor="#f2efe2"/>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:background="@drawable/shape_circle_number"
                    android:layout_centerInParent="true"
                    android:text="6"
                    android:gravity="center"
                    android:textSize="@dimen/_35sdp"
                    android:id="@+id/number6"
                    android:textColor="#f2efe2"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:background="@drawable/shape_circle_number"
                    android:layout_centerInParent="true"
                    android:text="7"
                    android:gravity="center"
                    android:textSize="@dimen/_35sdp"
                    android:id="@+id/number7"
                    android:textColor="#f2efe2"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:background="@drawable/shape_circle_number"
                    android:layout_centerInParent="true"
                    android:text="8"
                    android:gravity="center"
                    android:textSize="@dimen/_35sdp"
                    android:id="@+id/number8"
                    android:textColor="#f2efe2"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:background="@drawable/shape_circle_number"
                    android:layout_centerInParent="true"
                    android:text="9"
                    android:gravity="center"
                    android:textSize="@dimen/_35sdp"
                    android:id="@+id/number9"
                    android:textColor="#f2efe2"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:background="@drawable/tick"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:id="@+id/PasswordOk"
                    android:textColor="#f2efe2"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:background="@drawable/shape_circle_number"
                    android:layout_centerInParent="true"
                    android:text="0"
                    android:gravity="center"
                    android:textSize="@dimen/_35sdp"
                    android:id="@+id/number0"
                    android:textColor="#f2efe2"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="#f2efe2"
                    android:id="@+id/deleteNumber"
                    android:background="@drawable/backspace"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/DialogPassword"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>