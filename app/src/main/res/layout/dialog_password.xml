<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="#37000000">
    <RelativeLayout
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_120sdp"
        android:background="@drawable/shape_warning"
        android:layout_centerInParent="true"
        android:padding="@dimen/_5sdp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:text="تکرار رمز اشتباه است"
            android:textSize="@dimen/_15sdp"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:id="@+id/textview_ِDialogPass"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@id/textview_ِDialogPass">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="اوکی"
                    android:textSize="@dimen/_15sdp"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/btn_exit_DialogPass"
                    android:background="@drawable/shape_red_snack"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"/>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>