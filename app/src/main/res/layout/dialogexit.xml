<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="false"
    android:background="#37000000">
    <io.alterac.blurkit.BlurLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:blk_fps="0"
        android:id="@+id/blurlayuot"/>
    <RelativeLayout
        android:layout_width="@dimen/_220sdp"
        android:layout_height="@dimen/_200sdp"
        android:background="@drawable/shape_warning"
        android:layout_centerInParent="true"
        android:padding="@dimen/_15sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:text="مطمئنید که می خواهید از برنامه خارج شوید؟"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/colorWhite"
            android:id="@+id/textview_exit"
            android:gravity="center"
            android:textStyle="bold"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_below="@id/textview_exit"
            android:layout_marginTop="@dimen/_60sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_centerInParent="true">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="منصرف شدم"
                    android:textSize="@dimen/_14sdp"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/btn_exit_No"
                    android:background="@drawable/shape_stroke_white"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="خارج می شوم"
                    android:textSize="@dimen/_14sdp"
                    android:gravity="center"
                    android:id="@+id/btn_exit_Yes"
                    android:textColor="#fa3f2e"
                    android:textStyle="bold"
                    android:background="@drawable/shape_stroke_red"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingTop="@dimen/_5sdp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>